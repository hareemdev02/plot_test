<.header>
  Listing Plots
  <:actions>
    <.link patch={~p"/plots/new"}>
      <.button>New Plot</.button>
    </.link>
  </:actions>
</.header>

<.table
  id="plots"
  rows={@streams.plots}
  row_click={fn {_id, plot} -> JS.navigate(~p"/plots/#{plot}") end}
>
  <:col :let={{_id, plot}} label="Name"><%= plot.name %></:col>
  <:col :let={{_id, plot}} label="Dataset">
    <%= PlotTestWeb.PlotLive.Helper.dataset_value(plot.dataset) %>
  </:col>
  <:col :let={{_id, plot}} label="Expression"><%= plot.expression %></:col>
  <:action :let={{_id, plot}}>
    <div class="sr-only">
      <.link navigate={~p"/plots/#{plot}"}>Show</.link>
    </div>
    <.link :if={@current_user.id == plot.created_by_id} patch={~p"/plots/#{plot}/edit"}>
      Edit
    </.link>
    <.link :if={@current_user.id == plot.created_by_id} patch={~p"/plots/#{plot}/share"}>
      Share
    </.link>
  </:action>
  <:action :let={{id, plot}}>
    <.link
      :if={@current_user.id == plot.created_by_id}
      phx-click={JS.push("delete", value: %{id: plot.id}) |> hide("##{id}")}
      data-confirm="Are you sure?"
    >
      Delete
    </.link>
  </:action>
</.table>

<.modal :if={@live_action in [:new, :edit]} id="plot-modal" show on_cancel={JS.patch(~p"/plots")}>
  <.live_component
    module={PlotTestWeb.PlotLive.FormComponent}
    id={@plot.id || :new}
    title={@page_title}
    action={@live_action}
    plot={@plot}
    patch={~p"/plots"}
    current_user={@current_user}
  />
</.modal>

<.modal :if={@live_action == :share} id="plot-user-modal" show on_cancel={JS.patch(~p"/plots")}>
  <.live_component
    module={PlotTestWeb.PlotLive.Components.Share}
    id={@plot.id || :new}
    title={@page_title}
    action={@live_action}
    plot={@plot}
    patch={~p"/plots"}
    current_user={@current_user}
  />
</.modal>
